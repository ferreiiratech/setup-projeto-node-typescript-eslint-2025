{
    "$schema": "https://json.schemastore.org/tsconfig",
    "_version": "20.1.0",
  
    "compilerOptions": {
      "lib": ["es2023"],
      "module": "node16",
      "target": "es2022",
      "rootDir": "src",
      "baseUrl": "src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node16",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
  }